<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:elevation="1dp"
    android:orientation="vertical"
    tools:targetApi="lollipop">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            style="@style/CardView.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="1dp">

            <LinearLayout
                android:id="@+id/lypat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">
                <!-- TODO WORK TO BE DONE HERE -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/patient_male" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:maxWidth="70dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="100"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/patient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeStepGranularity="2sp"
                            android:autoSizeTextType="uniform"
                            android:capitalize="sentences"
                            android:text="Patient"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/signee"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="2dp" />

                            <ImageView
                                android:id="@+id/valide"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyNenreg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nenreg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="133559"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/dateprelevement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="133559"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtHeure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="12:10"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/datepromis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="133559"
                            android:textSize="14sp"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/urgent"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="2dp"
                            app:srcCompat="@drawable/emergency" />

                        <ImageView
                            android:id="@+id/solde"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/red_dollar" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lymedecin"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/male_doc" />

                        <TextView
                            android:id="@+id/medecin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="@string/medecin"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/analyseencours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/medecin"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/analysetermines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="@string/medecin"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/controler"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp" />

                    <ImageView
                        android:id="@+id/imprime"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp" />

                    <ImageView
                        android:id="@+id/livre"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

</LinearLayout>